{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist",
        "cleanDistDir": true,
        "buildCommand": "cd client && npm install && npm run build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/client/dist/assets/$1" },
    { "src": "/asset/(.*)", "dest": "/client/dist/asset/$1" },
    { "src": "/(.*)", "dest": "/client/dist/index.html" }
  ]
}
